@model Entities.Lecturer

@{
    ViewBag.Title = "DeleteLecturer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DeleteLecturer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lecturer</h4>
    <hr/>
    @if (ViewBag.Status == true)
    {

    <div class="alert-success">
        Видалено
    </div>
    }
    @if (ViewBag.Status == false)
    {
    <div class="alert-danger">
        Не вдалося видалити. Мабуть це викладач прив'язаний до дисципліни
    </div>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ПІБ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fullName)
        </dd>

        <dt>
            @Html.DisplayName("Тел.")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteLecturer", "Admin", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Назад до списку", "GetLecturers")
        </div>
    }
</div>
