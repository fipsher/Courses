
@{
    ViewBag.Title = "ChangeLectPhoneNumb";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    
</script>

<h2>Зміна телефону</h2>

@using (Html.BeginForm("ChangePhoneNumber", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Введіть номер телефону", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <input type="tel" pattern='[\+]\d{2}[\(]\d{3}[\)]\d{3}[\-]\d{2}[\-]\d{2}' title='Phone Number (Format: +38(999)999-99-99)' name="phoneNumb" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
