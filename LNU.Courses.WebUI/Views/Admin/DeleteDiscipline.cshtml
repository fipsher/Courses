@model Entities.Disciplines

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Видалити дисципліну";
}

<h2>Видалити дисципліну</h2>

<h3>Ви впевнені?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.kafedra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kafedra)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.lecturer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lecturer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.course)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

    </dl>

    @{ if (ViewBag.DeleteDisciplineResult != null)
        {
            if (ViewBag.DeleteDisciplineResult == true)
            {

                <div class="alert-success">
                    Видалено
                </div>
            }
            else
            {
                <div class="alert-danger">
                    Не вдалось видалити
                </div>
            }
        }
    }
    @using (Html.BeginForm("DeleteDiscipline", "Admin", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.id)
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Назад до списку", "GetCourses")
        </div>
    }
</div>
