@using System
@using System.Collections.Generic
@using System.Linq
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string supAdmRole = "SuperAdmin";
    string lectRole = "Lecturer";

    var temp = Session["Roles"];
    List<string> roles = new List<string>();
    if (temp != null)
    {
        roles = ((string[])temp).ToList();
    }
}

@section Header {

    @if (roles.Contains(supAdmRole))
    {

        <li class="classic-menu-dropdown">
            <a class="dropdown-toggle" data-hover="dropdown" data-close-others="true" href="javascript:;" data-toggle="dropdown">
                Люди
            </a>
            <ul class="dropdown-menu dropdown-menu-default">
                <li>
                    @Html.ActionLink("Адміни", "GetAdmins", "Admin")
                </li>
                <li>
                    @Html.ActionLink("Викладачі", "GetLecturers", "Admin")
                </li>
                <li>
                    @Html.ActionLink("Студенти", "GetStudents", "Admin", new { fio = " ", index = 1 }, null)
                </li>
            </ul>
        </li>
        <li>
            @Html.ActionLink("Змінити дедлайни", "ChangeDeadLine", "Admin", null, null)
        </li>

        <li>
            @Html.ActionLink("Змінити пошту", "ChangeCredentials", "Admin", null, null)
        </li>
    }
