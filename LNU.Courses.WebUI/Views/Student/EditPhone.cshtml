@model Entities.Students

@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Title = "Редагування телефонного номеру";
}

<h2>Редагування телефонного номеру</h2>
@using (Html.BeginForm("EditPhone", "Student", FormMethod.Post, new { onsubmit = "return validateForm()" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("New Phone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="tel" id="newPhone" name="newPhone" class="form-control" required pattern='[\+]\d{2}\d{3}\d{3}\d{2}\d{2}' title='Phone Number (Format: +389999999999)' />

                <div class="text-danger">@ViewBag.ChangePassValidate</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Змінити" class="btn btn-default" />
            </div>
        </div>
    </div>
}

