
@{
    ViewBag.Title = "ChangeCredentials";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Змінити пароль та мейл</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />


        <div class="form-group">
            @Html.Label("Мейл", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="email" name="eMail" class="col-md-2 form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Пароль", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="password" name="password" class="col-md-2 form-control" />
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
