@using LNU.Courses.WebUI.Models
@model System.Collections.Generic.IEnumerable<Entities.Students>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.ActionLink("П.І.Б", "DetailsOfDiscipline", "Admin", new {id = ViewBag.Id, sortBy = StudentSortingEnum.Fio }, null)
        </th>
        <th>
            @Html.ActionLink("Курс", "DetailsOfDiscipline", "Admin", new { id = ViewBag.Id, sortBy = StudentSortingEnum.Course }, null)
        </th>
        <th>
            @Html.ActionLink("Група", "DetailsOfDiscipline", "Admin", new { id = ViewBag.Id, sortBy = StudentSortingEnum.Group }, null)
        </th>
        <th>
            @Html.ActionLink("Середній бал", "DetailsOfDiscipline", "Admin", new { id = ViewBag.Id, sortBy = StudentSortingEnum.AverageMark }, null)
        </th>
        @if (ViewBag.Admin == 1)
        {
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
        }
        <th></th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageMark)
            </td>
            @if (ViewBag.Admin == 1)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Deleted)
                </td>
                <td>

                    @{
                        string editLink = "EditStudent?id=" + item.id;
                        string deleteLink = "DeleteStudent?id=" + item.id;
                    }

                    <a class="btn-link" href="/Admin/@editLink" id="edit"> Змінити </a>

                </td>
                <td>
                    @if (item.Deleted == false)
                    {
                        <a class="btn-link" href="/Admin/@deleteLink"> Видалити </a>
                    }
                </td>

                        }

        </tr>
                        }

</table>

